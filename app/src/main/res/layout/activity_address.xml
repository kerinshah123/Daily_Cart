<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="add address"
        android:textColor="@color/white"
        android:background="@drawable/buttonsignin"
        android:id="@+id/add"/>

    <RelativeLayout
        android:id="@+id/add_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:visibility="gone">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/addLine1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#fff"
            app:errorTextAppearance="@style/error_appearance">

            <EditText
                android:id="@+id/address1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address line 1"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textColorLink="@color/white" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/addline2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addLine1"
            android:textColorHint="#fff"
            app:errorTextAppearance="@style/error_appearance">

            <EditText
                android:id="@+id/address2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/addLine1"
                android:hint="Address line 2"
                android:textColor="@color/white" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/addLine3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addline2"
            android:textColorHint="#fff"
            app:errorTextAppearance="@style/error_appearance">

            <EditText
                android:id="@+id/address3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/addLine1"
                android:hint="Address line 3"
                android:textColor="@color/white" />

        </com.google.android.material.textfield.TextInputLayout>

        <Spinner
            android:id="@+id/spinnerarea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/addLine3"
            android:layout_marginBottom="10dp"
            android:background="@color/white"></Spinner>

        <Spinner
            android:id="@+id/spinnercity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/spinnerarea"
            android:layout_marginBottom="10dp"
            android:background="@color/white"></Spinner>

        <Spinner
            android:id="@+id/spinnerstate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/spinnercity"
            android:layout_marginBottom="10dp"
            android:background="@color/white"></Spinner>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/pincode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinnerstate"
            android:textColorHint="#fff"
            app:errorTextAppearance="@style/error_appearance">

            <EditText
                android:id="@+id/pincodeedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/spinnerstate"
                android:hint="enter pincode"
                android:textColor="@color/white"
                android:textColorLink="@color/white" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/addresstype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pincode"
            android:layout_marginTop="30dp"
            android:text="address_type"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/addresstyperg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pincode"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="26dp"
            android:layout_toRightOf="@id/addresstype"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/addresstype1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/white"
                android:text="home"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/addresstype2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/white"
                android:text="office"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/addresstype3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/white"
                android:text="other"
                android:textColor="@color/white" />
        </RadioGroup>

        <Button
            android:id="@+id/addaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addresstyperg"
            android:layout_marginTop="5dp"
            android:background="@drawable/button"
            android:text="add" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/addresslist">
        </ListView>

    </LinearLayout>

</LinearLayout>
