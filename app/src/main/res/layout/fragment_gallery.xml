<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:id="@+id/user_image"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User_Name"
                    android:id="@+id/username123"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="30dp"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/name_edit"
                    android:layout_toRightOf="@+id/username123"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/ic_edit_black_24dp"
                    android:layout_marginLeft="10dp"
                    app:tint="@color/black" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rrname"
                android:layout_marginTop="10dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="Change Your Name"
                    android:fontFamily="sans-serif"
                    android:id="@+id/textplan"
                    />
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="230dp"
                    android:layout_height="40dp"
                    android:id="@+id/change_name"
                    android:layout_below="@+id/textplan"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/buttoncolor"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/change_name"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="13dp"
                    android:text="change"
                    android:id="@+id/changename" />


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User_Email"
                    android:id="@+id/useremail123"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="30dp"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/email_edit"
                    android:layout_toRightOf="@+id/useremail123"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/ic_edit_black_24dp"
                    android:layout_marginLeft="10dp"
                    app:tint="@color/black" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rremail"
                android:layout_marginTop="10dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="Change Your E-Mail"
                    android:fontFamily="sans-serif"
                    android:id="@+id/textplanEmail"
                    />
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="230dp"
                    android:layout_height="40dp"
                    android:id="@+id/change_email"
                    android:layout_below="@+id/textplanEmail"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/buttoncolor"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/change_email"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="13dp"
                    android:id="@+id/changeemail"
                    android:text="change"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User_number"
                    android:id="@+id/user_number"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="30dp"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/number_edit"
                    android:layout_toRightOf="@+id/user_number"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/ic_edit_black_24dp"
                    android:layout_marginLeft="10dp"
                    app:tint="@color/black" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rrnumber"
                android:layout_marginTop="10dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="Change Your Number"
                    android:fontFamily="sans-serif"
                    android:id="@+id/textplannumber"
                    />
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="230dp"
                    android:layout_height="40dp"
                    android:id="@+id/change_number"
                    android:layout_below="@+id/textplannumber"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/buttoncolor"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/change_number"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="13dp"

                    android:id="@+id/changenumber"
                    android:text="change"/>

            </RelativeLayout>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPasswordLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#fff"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                >

                <EditText
                    android:id="@+id/change_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"

                    />
            </com.google.android.material.textfield.TextInputEditText>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="115dp">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Save"
                    android:id="@+id/save"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:background="@drawable/buttonsignin"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
